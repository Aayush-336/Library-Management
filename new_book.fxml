                text="Reset"/>
        <Label layoutX="288.0" layoutY="14.0" prefHeight="36.0" prefWidth="172.0" text="Add Newbook" textFill="#3122ba">
            <font>
                <Font name="Arial Narrow Bold" size="25.0"/>
            </font>
        </Label>
        <Label fx:id="confirmationLabel" layoutX="316.0" layoutY="353.0" textFill="RED">
            <font>
                <Font name="System Bold" size="20.0"/>
            </font>
        </Label>
    </children>
</AnchorPane>
