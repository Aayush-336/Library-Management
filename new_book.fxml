<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:id="mainPane" prefHeight="438.0" prefWidth="756.0"
            style="-fx-background-color: lightblue;" xmlns="http://javafx.com/javafx/8"
            fx:controller="newBookcontroller">
    <children>
        <Label layoutX="75.0" layoutY="68.0" prefHeight="25.0" prefWidth="55.0" text="Book id "/>
        <TextField fx:id="bookid" layoutX="145.0" layoutY="64.0"/>
        <Label layoutX="343.0" layoutY="64.0" prefHeight="25.0" prefWidth="93.0" text="Book name"/>
        <TextField fx:id="bookname" layoutX="430.0" layoutY="65.0"/>
        <Label layoutX="75.0" layoutY="122.0" prefHeight="25.0" prefWidth="55.0" text="Author"/>
        <TextField fx:id="author" layoutX="145.0" layoutY="122.0"/>
        <Label layoutX="343.0" layoutY="122.0" prefHeight="25.0" prefWidth="87.0" text="Book price"/>
        <TextField fx:id="bookprice" layoutX="430.0" layoutY="122.0"/>
        <Label layoutX="56.0" layoutY="188.0" prefHeight="25.0" prefWidth="74.0" text="Topic/stream"/>
        <TextField fx:id="topic" layoutX="145.0" layoutY="188.0"/>
        <Label layoutX="374.0" layoutY="188.0" prefHeight="25.0" prefWidth="36.0" text="Qty"/>
        <TextField fx:id="qty" layoutX="416.0" layoutY="188.0"/>
        <Label layoutX="63.0" layoutY="253.0" prefHeight="25.0" prefWidth="67.0" text="Date of add"/>
